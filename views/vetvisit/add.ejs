<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Vet Visit</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Create a New Vet Visit</h2>
        <form action="/vetVisit" method="POST">
            <div class="mb-3">
                <label for="pet" class="form-label">Pet</label>
                <select class="form-select" id="pet" name="pet" required>
                    <option value="">Select a Pet</option>
                    <% pets.forEach(function(pet) { %>
                        <option value="<%= pet._id %>"><%= pet.name %></option>
                    <% }); %>
                </select>
            </div>
            <div class="mb-3">
                <label for="vet" class="form-label">Vet</label>
                <select class="form-select" id="vet" name="vet" required>
                    <option value="">Select a Vet</option>
                    <% vets.forEach(function(vet) { %>
                        <option value="<%= vet._id %>"><%= vet.name %></option>
                    <% }); %>
                </select>
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Appointment Date</label>
                <input type="date" class="form-control" id="date" name="date" required>
            </div>
            <div class="mb-3">
                <label for="time" class="form-label">Appointment Time</label>
                <input type="time" class="form-control" id="time" name="time" required>
            </div>
            <div class="mb-3">
                <label for="reason" class="form-label">Reason for Visit</label>
                <textarea class="form-control" id="reason" name="reason" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Create Appointment</button>
        </form>
    </div>
</body>
</html>
